.search_btn{
    width: 60%;
    background:#fff;
    border: 2rpx #ff7500 solid; 
    height:60rpx;
    margin: 20px auto;
    border-radius: 10rpx;
    text-align: center;
    line-height: 60rpx;
    color: #808080;
    font-size: 28rpx;
}
.search_container{
    width:100%;
    height: 100%;
    position:fixed;
    top:0;
    left: 0;
    background: #f5f5f5;
}
.search_bar{
    height:100rpx;
    background:#fff;
    line-height: 100rpx;
}
.search_bar icon{
    display: inline-block;
    width:60rpx;
    margin-left: 40rpx;
    vertical-align: 20rpx;
}
.search_bar input{
    border:1px solid #ccc;
    display: inline-block;
    margin-top:15rpx;
    border-radius: 10rpx;
    height: 65rpx;
    width: 60%;
    box-sizing: border-box;
    padding:10rpx;
    font-size: 28rpx; 
    color:#777;
}
.search_bar button{
    width:18%;
    height: 65rpx;
    background:#ff7500;
    font-size: 30rpx;
    color: #fff;
    line-height: 65rxp;
    border-radius: 10rpx;
    display: inline-block;
    margin-left: 20rpx;
}
.tuijian{
    height:165px;
    background:#fff;
    padding:10rpx;
    text-align: center;
}
.tuijian p{
    font-size:28rpx;
    color: #ff7500;
    display: block;
}
.tuijian_item{
    width:24%;
    display: inline-block;
    margin-left:2rpx;
    margin-top: 20rpx;
}
.tuijian_item image.photo{
    width:100rpx;
    height: 100rpx;
    border-radius: 50%;
    background:#777;
}
.tuijian_item span{
    display: block;
    color: #333;
    font-size: 30rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.collect{
    width:100%;
    height:100rpx;
}
.collect image{
    width:30rpx;
    height:30rpx;
    margin-top:20rpx;
}
.collect span{
    font-size: 26rpx;
}
.people_item{
    height:150rpx;
    background:#fff;
    margin-top: 30rpx;
    box-sizing: border-box;
    padding:20rpx 30rpx;
}
.people_item image{
    width:100rpx;
    height: 100rpx;
    border-radius: 50%;
    background:#777;
    display: inline-block;
    vertical-align: -15rpx;
}
.people_title{
    width:40%;
    height: 100%;
    display: inline-block;
    margin-left: 20rpx;
    font-size:32rpx;
    line-height: 1.4;
}
.people_item p{
    display: block;
}
.people_item span{
    font-size: 28rpx;
    color:#808080;
}
.people_collect{
    display: inline-block;
    width:80rpx;
    height: 100rpx;
    float: right;
    text-align: center;
}
.people_collect image{
    width:30rpx;
    height:30rpx;
    margin-top:20rpx;
    background: none;
    border-radius: 0;
    margin-bottom: 15rpx;
}
.people_collect span{
    font-size: 26rpx;
    color: #333;
    display: block;
    text-align: center;
}