page{
    overflow: hidden;
}
.classify,.classify_text{
    min-height: 100rpx;
    background:#fff;
    margin-top: 40rpx;
    line-height: 100rpx;
    vertical-align: middle;
    font-size: 30rpx;
    padding: 0 30rpx;
}
.classify icon{
    transform: rotate(45deg)
}
.select_classify{
    position: absolute;
    top: 0;
    left: 0;
    background: #f5f5f5;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    transition: all 0.2s linear;
    transform: translateX(100%);
    padding: 50rpx;
    z-index: 999;
}
.classify_text{
    color: #777;
}
.select_show{
    transform: translateX(0)
}
.select_classify p{
    color: #777;
    font-size: 34rpx;
    display: block;
    margin-bottom: 30rpx;
}
.select_classify span{
    display: inline-block;
    height: 60rpx;
    background: #fff;
    padding: 0 20rpx;
    border-radius: 30rpx;
    border:2rpx #ddd solid;
    line-height: 62rpx;
    font-size: 30rpx;
    color: #333;
    margin-right: 10rpx;
    margin-bottom: 20rpx;
}
.select_classify span.type_active{
    border-color:#ff7500;
    color: #ff7500; 
}
.type_container{
    margin-top:50rpx; 
    padding-top: 40rpx;
    border-top:4rpx #ccc solid;
    position: relative
}
.type_container button{
    background: #ff7500;
    color: #fff;
    font-size: 32rpx;
    display: block;
    width: 200rpx;
    position: absolute;
    top: 350rpx; 
    left: 50%;
    margin-left: -100rpx;
}
.textinput{
    display: block;
    width: 100%;
    height: 350rpx;
    box-sizing: border-box;
    border-top: 2rpx #ff7500 solid;
    margin-top: 80rpx;
}
.textinput textarea{
    display: block;
    width: 100%;
    height: 350rpx;
    box-sizing: border-box;
    padding: 30rpx;
    background: #fff;
    border-bottom: 2rpx #ff7500 solid;
    font-size:30rpx;
    z-index: 0;
}
.placeholder{
}
.submit_btn{
    display: block;
    width: 400rpx;
    background: #ff7500;
    color: #fff;
    font-size: 32rpx;
    margin-top: 80rpx;
}